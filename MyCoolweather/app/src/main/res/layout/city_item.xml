<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_city_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="8dp"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/id_city_item_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@color/colorPrimary"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/id_city_item_tv_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:text="北京"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/id_city_item_tv_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="20`C"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/id_city_item_tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="多云"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/id_city_item_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/delete_red_48"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <ImageView
                android:id="@+id/id_city_item_iv_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/fix_gray"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />


            <ImageView
                android:id="@+id/id_city_item_iv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/notification_gray_515151"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>